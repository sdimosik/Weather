<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RecyclerView.Default" parent="Widget.AppCompat.ListView">
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="RecyclerView.Linear" parent="RecyclerView.Default">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="Recycler.Horizontal" parent="RecyclerView.Linear">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Recycler.Vertical" parent="RecyclerView.Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextView.Default" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Medium" parent="TextView.Default">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Small" parent="TextView.Default">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextView.H1" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.H2" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.H3" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.VERY_BIG" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextView.Medium.Black" parent="TextView.Default">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Small.Black" parent="TextView.Default">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.H1.Black" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.H2.Black" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.H3.Black" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.VERY_BIG.Black" parent="TextView.Default">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>